# ==============================================================================
# ADG Knowledge Management System - Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your values

# ==============================================================================
# Application Settings
# ==============================================================================
APP_NAME="ADG Knowledge Management System"
APP_VERSION="1.0.0"
DEBUG=false
SECRET_KEY=your-secret-key-change-in-production

# ==============================================================================
# Server Settings
# ==============================================================================
HOST=0.0.0.0
PORT=8080

# ==============================================================================
# CORS (comma-separated origins)
# ==============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# ==============================================================================
# Google OAuth2 Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/apis/credentials
# ==============================================================================
OAUTH_CLIENT_ID=your-oauth-client-id.apps.googleusercontent.com
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_REDIRECT_URI=http://localhost:8080/api/v1/auth/callback

# ==============================================================================
# Google Drive Settings
# ==============================================================================
# Root folder ID for document storage
GDRIVE_ROOT_FOLDER_ID=your-root-folder-id

# Service account file (optional, for fallback read access)
# GDRIVE_SERVICE_ACCOUNT_FILE=path/to/service-account.json

# ==============================================================================
# NotebookLM Settings
# ==============================================================================
# Default notebook ID for chat
NOTEBOOK_ID=your-default-notebook-id

# Auth refresh interval in minutes
AUTH_REFRESH_INTERVAL_MINUTES=30

# ==============================================================================
# Token Storage
# ==============================================================================
TOKEN_STORAGE_DIR=~/.adg-kms

# ==============================================================================
# Response Settings (Optional)
# ==============================================================================
ENABLE_BRANDING=false
BRANDING_TEXT=ðŸ¤– Powered by ADG KMS

# ==============================================================================
# Database (Future - not yet implemented)
# ==============================================================================
# DATABASE_URL=postgresql://user:pass@localhost/adg_kms
